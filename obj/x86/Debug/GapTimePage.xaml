<Page
    x:Class="CLOBS2.GapTimePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CLOBS2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <RelativePanel>
            <TextBlock x:ConnectionId='2' Name="WaitCenterMessage" Text="Now Waiting for Next Observation" 
                       FontSize="36"                      
                       FontWeight="SemiBold"
                       RelativePanel.AlignHorizontalCenterWithPanel="True"
                       RelativePanel.AlignVerticalCenterWithPanel="True"/>
            <StackPanel RelativePanel.Below="WaitCenterMessage" RelativePanel.AlignHorizontalCenterWithPanel="True" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Stretch" >
                <TextBlock x:ConnectionId='3' Name="NextScreenMessage" Text="Next observation will start in"
                           FontSize="24" 
                           Margin="0, 0, 0, 0"/>
                <TextBlock x:ConnectionId='4' Name="GapTime" Text="00:00"
                           FontSize="24" Margin="5, 0, 0, 0"/>
            </StackPanel>
        </RelativePanel>
    </Grid>
</Page>

