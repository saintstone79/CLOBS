<Page
    x:Class="CLOBS2.GapTimePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CLOBS2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <RelativePanel>
            <TextBlock x:ConnectionId='2' Name="WaitCenterMessage" Text="Now Waiting for Next Observation" 
                       FontSize="36"                      
                       FontWeight="SemiBold"
                       RelativePanel.AlignHorizontalCenterWithPanel="True"
                       RelativePanel.AlignVerticalCenterWithPanel="True"/>
            <StackPanel x:ConnectionId='3' Name="WaitingTimePanel" RelativePanel.Below="WaitCenterMessage" RelativePanel.AlignHorizontalCenterWithPanel="True" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Stretch" >
                <TextBlock x:ConnectionId='7' Name="NextScreenMessage" Text="Next observation will start in"
                           FontSize="24" 
                           Margin="0, 0, 0, 0"/>
                <TextBlock x:ConnectionId='8' Name="GapTime" Text="00:00"
                           FontSize="24" Margin="5, 0, 0, 0" FontFamily="Segoe UI"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0, 50, 0, 20" RelativePanel.Below="WaitingTimePanel" RelativePanel.AlignHorizontalCenterWithPanel="True">
                <ToggleButton x:ConnectionId='5' x:Name="btnShowNote" Width="200" Height="50"  Content="Record notes"
                        Foreground="{ThemeResource AppBarItemForegroundThemeBrush}" Background="{ThemeResource AppBarItemPressedForegroundThemeBrush}" BorderBrush="{ThemeResource AppBarItemDisabledForegroundThemeBrush}" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Bottom"
                                                 />
                <Button x:ConnectionId='6' x:Name="btnReturnLogSheet" Width="200" Height="50" Content="Return to observation sheet" Margin="20, 0, 0, 0"
                        Foreground="{ThemeResource AppBarItemForegroundThemeBrush}" Background="{ThemeResource AppBarItemPressedForegroundThemeBrush}" BorderBrush="{ThemeResource AppBarItemDisabledForegroundThemeBrush}"
                                                       />
            </StackPanel>
            <TextBox x:ConnectionId='4' Visibility="Collapsed" Name="GapTimeNote" Header="Observation Note" RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignHorizontalCenterWithPanel="True" ScrollViewer.VerticalScrollBarVisibility="Auto"
                     Height="150" TextWrapping="Wrap" MaxLength="640" AcceptsReturn="True" Margin="5, 0, 5, 30" Width="1000"/>
        </RelativePanel>
    </Grid>
</Page>

