<Page
    x:Class="CLOBS2.ObservationItemsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CLOBS2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Height="Auto" Width="Auto">
    <Grid>
        <SplitView x:ConnectionId='2' Name="MainSplitView"
                   Grid.Row="0"
                   DisplayMode="Inline"
                   IsPaneOpen="True"
                   OpenPaneLength="200">
            <SplitView.Pane>
                <StackPanel Background="{ThemeResource ListViewItemPlaceholderBackgroundThemeBrush}">
                    <TextBlock Text="Classroom 
                               Activity"
                               FontFamily="Segoe MDL Assets"
                               FontWeight="SemiBold"                           
                               FontSize="24"
                               Foreground="#FFFBFBFB"
                               TextAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                               TextWrapping="Wrap"
                               Margin="0, 10, 0, 30"
                               />
                    <ListBox x:ConnectionId='3' Name="ClassActivityList"
                         SelectionMode="Single"
                                                                                Background="{x:Null}">
                        <ListBox.Resources>
                            <SolidColorBrush x:Key="ListBoxItemBackgroundSelected" Color="#FF0000" />
                            <SolidColorBrush x:Key="ListBoxItemBackgroundSelectedPointerOver" Color="#FF0000" />
                        </ListBox.Resources>
                        <TextBlock x:ConnectionId='4' Name="MenuClassroomManagement" 
                                   Text="1.Classroom Management"
                               FontFamily="Segoe MDL Assets"
                               FontSize="18" Foreground="#FFFBFBFB" 
                               TextWrapping="Wrap"/>
                        <TextBlock x:ConnectionId='5' Name="MenuIntroDesignTask" Text="2.Intro Design Task"   
                               FontFamily="Segoe MDL Assets"
                               FontSize="18" Foreground="#FFFBFBFB"
                                   TextWrapping="Wrap"/>
                        <TextBlock x:ConnectionId='6' Name="MenuEngineeringSTEMContent" Text="3.Engineering/STEM Content"                               
                               FontFamily="Segoe MDL Assets"
                               FontSize="18" Foreground="#FFFBFBFB" 
                               TextWrapping="Wrap"/>
                        <TextBlock x:ConnectionId='7' Name="MenuHandsOnActivity" Text="4.Hands-on Activity"  
                               FontFamily="Segoe MDL Assets"
                               FontSize="18" Foreground="#FFFBFBFB"
                               TextWrapping="Wrap"/>
                        <TextBlock x:ConnectionId='8' Name="MenuGroupWork" Text="5.Group Discussion/Q&#38;A/Share Results"
                               FontFamily="Segoe MDL Assets"
                               FontSize="18" Foreground="#FFFBFBFB"
                               TextWrapping="Wrap"/>
                        <TextBlock x:ConnectionId='9' Name="MenuDirectionsOrMaterials" Text="6.Directions/Materials"                                                              
                               FontFamily="Segoe MDL Assets"
                               FontSize="18" Foreground="#FFFBFBFB"
                               TextWrapping="Wrap"/>
                    </ListBox>
                </StackPanel>
            </SplitView.Pane>
            <SplitView.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <RelativePanel Grid.Row="0" Grid.ColumnSpan="2" Background="{ThemeResource IMECandidateSelectedBackgroundThemeBrush}">
                        <TextBlock x:ConnectionId='53' Name="LogNoText" Text="Log No: "
                       RelativePanel.AlignLeftWithPanel="True"
                       RelativePanel.AlignVerticalCenterWithPanel="True"
                       FontSize="18"
                       Margin="10, 0, 0, 0" Foreground="White"/>
                        <TextBlock x:ConnectionId='54' Name="LogIndex"
                       Text="N"
                       RelativePanel.RightOf="LogNoText"
                       RelativePanel.AlignVerticalCenterWithPanel="True"
                       FontSize="18"
                       Foreground="White"
                       Margin="10, 0, 0, 0"/>
                        <StackPanel RelativePanel.AlignHorizontalCenterWithPanel="True" Orientation="Horizontal">
                            <TextBlock x:ConnectionId='55' Name="ObservationTimeText"
                       Text="Observation Time"                       
                       FontSize="36"
                       Foreground="White"
                       FontWeight="Bold"
                       Margin="0, 0, 10, 0"/>
                            <TextBlock x:ConnectionId='56' Name="ObservationLogLapse"
                       Text="00:00"                       
                       FontSize="36"
                       Foreground="White"
                       FontWeight="Bold"
                       Margin="0, 0, 0, 0"/>
                            <TextBlock Text="/"
                           FontSize="24"
                           Foreground="White"
                           VerticalAlignment="Bottom"
                           />
                            <TextBlock x:ConnectionId='57' Name="ObservationLogDuration"
                       Text="00:00"               
                       FontSize="24"
                       Foreground="White"            
                           VerticalAlignment="Bottom"
                       Margin="0, 0, 0, 0"/>
                        </StackPanel>
                    </RelativePanel>
                    <StackPanel x:ConnectionId='10' Name="Stomper1Panel" Grid.Row="1" Grid.Column="0" Margin="0, 12, 0, 0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="STOMPER 1"
                                   FontFamily="Segoe MDL Assets"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Margin="10, 0, 0, 0"/>
                            <TextBlock x:ConnectionId='52' Name="Stomper1" Text="(STOMPER)"
                                   FontFamily="Segoe MDL Assets"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Margin="10, 0, 0, 0" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button x:ConnectionId='50' Name="ST1TalkingToClass" Content="Talk to Class" HorizontalAlignment="Left" Width="280"
                                Margin="30, 10, 0, 0"                                 Style="{StaticResource ButtonStyle}" />
                            <TextBlock x:ConnectionId='51' Name="ST1TalkingToClassCt" Text="0" 
                                       Visibility="Collapsed"
                                       FontSize="22"
                                       Margin="10, 0, 0, 0"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button x:ConnectionId='48' Name="ST1TalkingToIndividual" Content="Talk To Individual" HorizontalAlignment="Left" Width="280"
                                Margin="30, 15, 0, 0"                                      Style="{StaticResource ButtonStyle}" />
                            <TextBlock x:ConnectionId='49' Name="ST1TalkingToIndividualCt" Text="0" 
                                       Visibility="Collapsed"
                                       FontSize="22"
                                       Margin="10, 0, 0, 0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button x:ConnectionId='46' Name="ST1Observing" Content="Observing" HorizontalAlignment="Left" Width="280"
                                Margin="30, 15, 0, 0"                            Style="{StaticResource ButtonStyle}" />
                            <TextBlock x:ConnectionId='47' Name="ST1ObservingCt" Text="0" 
                                       Visibility="Collapsed"
                                       FontSize="22"
                                       Margin="10, 0, 0, 0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button x:ConnectionId='44' Name="ST1HandingOut"  Content="Handing-out Materials" HorizontalAlignment="Left" Width="280"
                                Margin="30, 15, 0, 0"                              Style="{StaticResource ButtonStyle}" />
                            <TextBlock x:ConnectionId='45' Name="ST1HandingOutCt" Text="0" 
                                       Visibility="Collapsed"
                                       FontSize="22"
                                       Margin="10, 0, 0, 0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button x:ConnectionId='42' Name="ST1AnsweringQH" Content="Answering Questions" HorizontalAlignment="Left" Width="280"
                                Margin="30, 15, 0, 0"                               Style="{StaticResource ButtonStyle}" />
                            <TextBlock x:ConnectionId='43' Name="ST1AnsweringQHCt" Text="0" 
                                       Visibility="Collapsed"
                                       FontSize="22"
                                       Margin="10, 0, 0, 0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel x:ConnectionId='11' Name="Stomper2Panel" Grid.Row="1" Grid.Column="1" Margin="0, 12, 0, 0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="STOMPER 2"
                                   FontFamily="Segoe MDL Assets"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Margin="10, 0, 0, 0"/>
                            <TextBlock x:ConnectionId='41' Name="Stomper2" Text="(STOMPER)"
                                   FontFamily="Segoe MDL Assets"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Margin="10, 0, 0, 0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button x:ConnectionId='39' Name="ST2TalkingToClass" Content="Talk to Class" HorizontalAlignment="Left" Width="280"
                                Margin="30, 10, 0, 0"                                  Style="{StaticResource ButtonStyle}" />
                            <TextBlock x:ConnectionId='40' Name="ST2TalkingToClassCt" Text="0" 
                                       Visibility="Collapsed"
                                       FontSize="22"
                                       Margin="10, 0, 0, 0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button x:ConnectionId='37' Name="ST2TalkingToIndividual" Content="Talk To Individual" HorizontalAlignment="Left" Width="280"
                                Margin="30, 15, 0, 0"                                       Style="{StaticResource ButtonStyle}" />
                            <TextBlock x:ConnectionId='38' Name="ST2TalkingToIndividualCt" Text="0" 
                                       Visibility="Collapsed"
                                       FontSize="22"
                                       Margin="10, 0, 0, 0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button x:ConnectionId='35' Name="ST2Observing" Content="Observing" HorizontalAlignment="Left" Width="280"
                                Margin="30, 15, 0, 0"                             Style="{StaticResource ButtonStyle}" />
                            <TextBlock x:ConnectionId='36' Name="ST2ObservingCt" Text="0" 
                                       Visibility="Collapsed"
                                       FontSize="22"
                                       Margin="10, 0, 0, 0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button x:ConnectionId='33' Name="ST2HandingOut"  Content="Handing-out Materials" HorizontalAlignment="Left" Width="280"
                                Margin="30, 15, 0, 0"                              Style="{StaticResource ButtonStyle}" />
                            <TextBlock x:ConnectionId='34' Name="ST2HandingOutCt" Text="0" 
                                       Visibility="Collapsed"
                                       FontSize="22"
                                       Margin="10, 0, 0, 0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button x:ConnectionId='31' Name="ST2AnsweringQH"  Content="Answering Questions" HorizontalAlignment="Left" Width="280"
                                Margin="30, 15, 0, 0"                               Style="{StaticResource ButtonStyle}" />
                            <TextBlock x:ConnectionId='32' Name="ST2AnsweringQHCt" Text="0" 
                                       Visibility="Collapsed"
                                       FontSize="22"
                                       Margin="10, 0, 0, 0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Row="2" Grid.Column="0">
                        <TextBlock Text="Intervention through"
                                   FontFamily="Segoe MDL Assets"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Margin="10, 20, 0, 0"/>
                        <StackPanel Orientation="Horizontal">
                            <Button x:ConnectionId='29' Name="InterventionTradingCard"  Content="Trading Card" HorizontalAlignment="Left" Width="280"
                                Margin="30, 15, 0, 0"                                        Style="{StaticResource ButtonStyle}" VerticalAlignment="Top" />
                            <TextBlock x:ConnectionId='30' Name="InterventionTradingCardCt" Text="0" 
                                       Visibility="Collapsed"
                                       FontSize="22"
                                       Margin="10, 0, 0, 0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button x:ConnectionId='27' Name="InterventionBioVideos"  Content="Videos (Bios about STOMPers)" HorizontalAlignment="Left" Width="280"
                                Margin="30, 15, 0, 0"                                       Style="{StaticResource ButtonStyle}" />
                            <TextBlock x:ConnectionId='28' Name="InterventionBioVideosCt" Text="0" 
                                       Visibility="Collapsed"
                                       FontSize="22"
                                       Margin="10, 0, 0, 0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button x:ConnectionId='25' Name="InterventionEngArticle"  Content="Engineering-related Article/Video" HorizontalAlignment="Left" Width="280"
                                Margin="30, 15, 0, 0"                                       Style="{StaticResource ButtonStyle}" />
                            <TextBlock x:ConnectionId='26' Name="InterventionEngArticleCt" Text="0" 
                                       Visibility="Collapsed"
                                       FontSize="22"
                                       Margin="10, 0, 0, 0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button x:ConnectionId='23' Name="InterventionClassWork" Content="Class Work Examples" HorizontalAlignment="Left" Width="280"
                                Margin="30, 15, 0, 0"                                      Style="{StaticResource ButtonStyle}" />
                            <TextBlock x:ConnectionId='24' Name="InterventionClassWorkCt" Text="0" 
                                       Visibility="Collapsed"
                                       FontSize="22"
                                       Margin="10, 0, 0, 0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Row="2" Grid.Column="1">
                        <TextBlock Text="Interaction through"
                                   FontFamily="Segoe MDL Assets"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Margin="10, 20, 0, 0"/>
                        <StackPanel Orientation="Horizontal">
                            <Button x:ConnectionId='21' Name="InteractionEngConnection"  Content="Engineering Connection" HorizontalAlignment="Left" Width="280"
                                Margin="30, 15, 0, 0"                                         Style="{StaticResource ButtonStyle}" />
                            <TextBlock x:ConnectionId='22' Name="InteractionEngConnectionCt" Text="0" 
                                       Visibility="Collapsed"
                                       FontSize="22"
                                       Margin="10, 0, 0, 0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button x:ConnectionId='19' Name="InteractionRealConnection"  Content="Real-World Connection" HorizontalAlignment="Left" Width="280"
                                Margin="30, 15, 0, 0"                                          Style="{StaticResource ButtonStyle}" />
                            <TextBlock x:ConnectionId='20' Name="InteractionRealConnectionCt" Text="0" 
                                       Visibility="Collapsed"
                                       FontSize="22"
                                       Margin="10, 0, 0, 0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button x:ConnectionId='17' Name="InteractionEngExperience"  Content="Personal Engineering Experience" HorizontalAlignment="Left" Width="280"
                                Margin="30, 15, 0, 0"                                         Style="{StaticResource ButtonStyle}" />
                            <TextBlock x:ConnectionId='18' Name="InteractionEngExperienceCt" Text="0" 
                                       Visibility="Collapsed"
                                       FontSize="22"
                                       Margin="10, 0, 0, 0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button x:ConnectionId='15' Name="InteractionEngPassion"  Content="Engineering Passions (Emotions, Enthusiasm)" HorizontalAlignment="Left" Width="280"
                                Margin="30, 15, 0, 0"                                      Style="{StaticResource ButtonStyle}" />
                            <TextBlock x:ConnectionId='16' Name="InteractionEngPassionCt" Text="0" 
                                       Visibility="Collapsed"
                                       FontSize="22"
                                       Margin="10, 0, 0, 0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button x:ConnectionId='13' Name="InteractionPersonalConnection"  Content="Personal Connections (Interests, Hobbies)" HorizontalAlignment="Left" Width="280"
                                Margin="30, 15, 0, 0"                                              Style="{StaticResource ButtonStyle}" />
                            <TextBlock x:ConnectionId='14' Name="InteractionPersonalConnectionCt" Text="0" 
                                       Visibility="Collapsed"
                                       FontSize="22"
                                       Margin="10, 0, 0, 0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                    <TextBox x:ConnectionId='12' Grid.Row="3" Height="150" Grid.ColumnSpan="2" Name="ObservationNote" Header="Observation Note" TextWrapping="Wrap"
  AcceptsReturn="True" Margin="10, 0, 10, 0" RequestedTheme="Default"/>
                </Grid>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>

