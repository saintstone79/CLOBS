<Page
    x:Class="CLOBS2.ObservationFramePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CLOBS2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <RelativePanel Grid.Row="0" Background="{ThemeResource AppBarItemPointerOverBackgroundThemeBrush}">
            <TextBlock x:ConnectionId='7' Text="OBSERVER:"       
                                   Name="OBSERVER_TXT"                
                                   FontSize="18"
                                   RelativePanel.AlignLeftWithPanel="True"
                                   Margin="10, 0, 0, 0"/>
            <TextBlock x:ConnectionId='8' Name="ObserverName"  
                                   Text="OBSERVER"                       
                                   RelativePanel.RightOf="OBSERVER_TXT"                     
                                   FontSize="18"                                             
                                   Margin="5, 0, 10, 20"/>
            <TextBlock x:ConnectionId='9' Text="SCHOOL:"     
                                   Name="SCHOOL_TXT"
                                   RelativePanel.RightOf="ObserverName"
                       Width="80"
                       FontSize="18"                       
                       Margin="30, 0, 0, 0"/>
            <TextBlock x:ConnectionId='10' Name="SchoolName" Text="SCHOOL"                                              
                                   RelativePanel.RightOf="SCHOOL_TXT"
                       Width="80"
                       FontSize="18"                       
                       Margin="5, 0, 0, 20"/>
            <TextBlock x:ConnectionId='11' Text="TEACHER:"    
                                   Name="TEACHER_TXT"
                                   RelativePanel.RightOf="SchoolName"
                       FontSize="18"
                       Margin="30, 0, 0, 0"/>
            <TextBlock x:ConnectionId='12' Name="TeacherName" Text="TEACHER"                       
                                   RelativePanel.RightOf="TEACHER_TXT"
                       FontSize="18"
                       Margin="5, 0, 0, 0"/>
            <TextBlock x:ConnectionId='13' Name="ObservationDate"
                                   RelativePanel.AlignRightWithPanel="True"
                       Text="DATE"                       
                       FontSize="18"
                       Margin="0, 0, 20, 0"/>
            <StackPanel RelativePanel.AlignRightWithPanel="True" RelativePanel.Below="ObservationDate" Orientation="Horizontal">
                <TextBlock Text="Session Lapsed"                                     
                       FontSize="18"
                       Margin="0, 0, 5, 0"/>
                <TextBlock x:ConnectionId='14' Name="SessionLapse"
                       Text="00:00:00"
                       FontSize="18"
                       Margin="10, 0, 20, 0"/>
            </StackPanel>
        </RelativePanel>
        <Frame x:ConnectionId='2' Grid.Row="1" Name="ObservationItemFrame"/>
        <RelativePanel x:ConnectionId='3' Grid.Row="2" Name="BottomButtonPanel">
            <Button x:ConnectionId='4' Name="UpdateObservationInfoData" 
                                                                   
                                FontSize="18"                            
                            RelativePanel.AlignLeftWithPanel="True"
                                        RelativePanel.AlignVerticalCenterWithPanel="True"
                    Margin="10, 0, 0, 0" Foreground="{ThemeResource AppBarItemForegroundThemeBrush}" Background="{ThemeResource AppBarItemPressedForegroundThemeBrush}" >
                <StackPanel Orientation="Horizontal">
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE713;" Margin="0,0,5,0"/>
                    <TextBlock>Update observation info</TextBlock>
                </StackPanel>
            </Button>
            <Button x:ConnectionId='5' Name="EditPrevLog" 
                                             
                    FontSize="18"                            
                    RelativePanel.RightOf="UpdateObservationInfoData"
                    RelativePanel.AlignVerticalCenterWithPanel="True"
                    Margin="30, 0, 0, 0" Foreground="{ThemeResource AppBarItemForegroundThemeBrush}" Background="{ThemeResource AppBarItemPressedForegroundThemeBrush}" >
                <StackPanel Orientation="Horizontal" Visibility="Collapsed">
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE70F;" Margin="0,0,5,0"/>
                    <TextBlock>Edit logs</TextBlock>
                </StackPanel>
            </Button>
            <Button x:ConnectionId='6' Name="EndObservation" 
                                                 
                    FontSize="18"                            
                    RelativePanel.AlignRightWithPanel="True" 
                    RelativePanel.AlignVerticalCenterWithPanel="True"
                    Margin="0, 0, 30, 0" Foreground="{ThemeResource AppBarItemForegroundThemeBrush}" Background="{ThemeResource AppBarItemPressedForegroundThemeBrush}">
                <StackPanel Orientation="Horizontal">
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xEF2C;" Margin="0,0,5,0"/>
                    <TextBlock>End Observation</TextBlock>
                </StackPanel>
            </Button>
        </RelativePanel>
    </Grid>
</Page>

